<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uyg1.mavikapak.com.mavikapak.sing.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="start"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etRegMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="mail"
            android:inputType="textEmailAddress"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etRegSifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etRegisim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="isim soy isim"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnRegGiris"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="GiriÅŸ Yap"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>
